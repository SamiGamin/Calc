<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:background="#E6DCDC"
    android:backgroundTint="#E4C4C4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="239dp"
        android:background="@drawable/btn_numeros2"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="30dp"
        android:alignmentMode="alignMargins"
        android:alwaysDrawnWithCache="false"
        android:background="#E6DCDC"
        android:backgroundTint="#E4C4C4"
        android:columnCount="4"
        android:foregroundGravity="bottom"
        android:onClick="onButtonClick"
        android:orientation="horizontal"
        android:outlineProvider="none"
        android:padding="10dp"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros2"
            android:onClick="onButtonClick"
            android:text="7"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="8"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="9"
            android:textSize="34sp" />

        <!-- Agrega los demás botones para los números y operaciones -->
        <Button
            android:id="@+id/btn_muilti"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:contextClickable="false"
            android:onClick="onButtonClick"
            android:text="*"
            android:textColorHighlight="@color/black"
            android:textColorLink="@color/black"
            android:textSize="34sp"
            app:iconTint="@color/black"
            app:rippleColor="@color/black" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="4"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="5"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="6"
            android:textSize="34sp" />

        <!-- Agrega los demás botones para los números y operaciones -->
        <Button
            android:id="@+id/btn_divi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="/"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="1"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="2"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="3"
            android:textSize="34sp" />

        <!-- Agrega los demás botones para los números y operaciones -->
        <Button
            android:id="@+id/btn_rest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="-"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="C"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="0"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btn_igual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:onClick="onButtonClick"
            android:text="="
            android:textSize="34sp" />

        <!-- Agrega los demás botones para los números y operaciones -->
        <Button
            android:id="@+id/btn_suma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/btn_numeros"
            android:backgroundTint="@color/black"
            android:onClick="onButtonClick"
            android:text="+"
            android:textSize="34sp" />

    </GridLayout>


</RelativeLayout>